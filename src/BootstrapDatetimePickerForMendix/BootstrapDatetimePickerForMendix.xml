<?xml version="1.0" encoding="utf-8" ?>
<widget id="BootstrapDatetimePickerForMendix.widget.BootstrapDatetimePickerForMendix" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>BootstrapDatetimePickerForMendix</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="dateTimeAttribute" type="attribute">
            <caption>Datetime source</caption>
            <category>Data source</category>
            <description>The Datetime attribute</description>
            <attributeTypes>
                <attributeType name="DateTime" />
            </attributeTypes>
        </property>
        <property key="onChangeMicroflow" type="microflow" required="false">
            <caption>On change</caption>
            <category>Events</category>
            <description>Run this microflow when the user leaves the date time field and has changed the value</description>
            <returnType type="Void"/>
        </property>
    </properties>
</widget>
